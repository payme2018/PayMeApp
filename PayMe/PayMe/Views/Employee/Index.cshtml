
@{
    ViewBag.Title = "PayMe - Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        var table = $('#table');
        $('#export').click(function () {
            table.tableExport({
                type: 'excel',
                escape: false
            });
        });
    });

    function ActionEdit(value) {
        return '<a href="../Employee/Edit/' + value + '"><em class="fa fa-pencil" style="font-size:18px;"></a>';
    }
</script>
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Employees</li>
    </ol>
</div>

<div style="float:left;"><a href="~/Employee/Register" class="btn btn-md btn-primary">Create</a></div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Employees</div>
            <div class="panel-body">
                @if (TempData["MessageRegistration"] != null && TempData["MessageRegistration"].ToString() != "")
                {
                    <p class="alert alert-success" id="successMessage">@TempData["MessageRegistration"]</p>
                }
                <div id="toolbar">
                    <button id="export" class="btn btn-default">Export Excel</button>
                </div>
                <table id="table" data-toggle="table" data-url="../Employee/GetUserList" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc"
        data-show-export="true" data-toolbar="#toolbar">
                    <thead>
                        <tr>
                            <th data-field="FirstName" data-sortable="true">First Name</th>
                            <th data-field="LastName" data-sortable="true">Last Name</th>
                            <th data-field="GenderName" data-sortable="true">Gender</th>
                            <th data-field="EmailID" data-sortable="true">Email</th>
                            <th data-field="RoleName" data-sortable="true">Role</th>
                            <th data-field="EmployeeID" data-sortable="true" data-formatter="ActionEdit">Edit</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>