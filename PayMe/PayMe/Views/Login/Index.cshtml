@model Business.LoginViewModel
@{
    ViewBag.Title = "PayMe - Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            @if (ViewBag.errormessage != null)
            {
                <p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>
            }
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Log in:</div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Username)
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @maxlength = 20 })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @maxlength = 30 })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-0 col-md-10">
                                    <input id="Submit1"  class="btn btn-primary" type="submit" value="Sign In">
                                </div>

                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        
    </div><!-- /.row -->
}





